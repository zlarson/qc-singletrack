using System;
using System.Threading.Tasks;
using Microsoft.Azure.Functions.Worker;
using Microsoft.Extensions.Logging;
using QCSingleTrack.TrailStatusScraperFn.Services;
using QCSingleTrack.Domain;

namespace QCSingleTrack.TrailStatusScraperFn;

public class TimerScrapeFunction
{
    private readonly ILogger _logger;
    private readonly ITrailScraper _scraper;

    public TimerScrapeFunction(ILoggerFactory loggerFactory, ITrailScraper scraper)
    {
        _logger = loggerFactory.CreateLogger<TimerScrapeFunction>();
        _scraper = scraper;
    }

    [Function("TimerScrapeFunction")]
    public async Task Run([TimerTrigger("*/10 * * * *")] TimerInfo myTimer)
    {
        _logger.LogInformation("C# Timer trigger function executed at: {executionTime}", DateTime.Now);
        if (myTimer.ScheduleStatus is not null)
        {
            _logger.LogInformation("Next timer schedule at: {nextSchedule}", myTimer.ScheduleStatus.Next);
        }

        // Example usage: create a stub TrailStatus and call the scraper.
        var trail = new TrailStatus
        {
            TrailId = 1,
            TrailName = "https://example.com",
            Latitude = 0,
            Longitude = 0,
            LastScrapedTime = DateTime.MinValue
        };

        var updated = await _scraper.ScrapeAsync(trail);
        _logger.LogInformation("Scraped trail {TrailId}, status: {Status}", updated.TrailId, updated.Status);
    }
}